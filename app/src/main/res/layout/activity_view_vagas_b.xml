<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b5b5b5"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vagas_bloco_b"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Button"
            android:layout_gravity="end"
            android:layout_marginTop="6dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="130dp"
            android:layout_marginBottom="5dp"
            android:text="Sair" />

    </LinearLayout>

    <!-- Navigation Buttons Layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btn_backA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:background="@drawable/ic_arrou_left"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_nextC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_arrow_right"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Parking Lot Layout -->
    <GridLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="8"
        android:rowCount="2"
        android:layout_marginTop="50dp">

        <!-- Parking Spaces - Row 1 -->
        <View
            android:id="@+id/vaga1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:background="@color/black" />

        <View
            android:id="@+id/vaga2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:background="@color/black" />

        <View
            android:id="@+id/vaga3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:background="@color/black" />

        <View
            android:id="@+id/vaga4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="4dp"
            android:background="@color/black" />

        <View
            android:id="@+id/vaga5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_margin="4dp"
            android:background="@color/black" />

        <View
            android:id="@+id/vaga6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="5"
            android:layout_margin="4dp"
            android:background="@color/black" />

        <View
            android:id="@+id/vaga7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="6"
            android:layout_margin="4dp"
            android:background="@color/black" />

        <View
            android:id="@+id/vaga8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="7"
            android:layout_margin="4dp"
            android:background="@color/black" />

        <!-- Parking Spaces - Row 2 -->
        <View
            android:id="@+id/vaga9"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:background="@color/black" />

        <View
            android:id="@+id/vaga10"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:background="@color/black" />

        <View
            android:id="@+id/vaga11"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:background="@color/black" />

        <View
            android:id="@+id/vaga12"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="4dp"
            android:background="@color/black" />

        <View
            android:id="@+id/vaga13"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_margin="4dp"
            android:background="@color/black" />

        <View
            android:id="@+id/vaga14"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_row="1"
            android:layout_column="5"
            android:layout_margin="4dp"
            android:background="@color/black" />

        <View
            android:id="@+id/vaga15"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_row="1"
            android:layout_column="6"
            android:layout_margin="4dp"
            android:background="@color/black" />

        <View
            android:id="@+id/vaga16"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_row="1"
            android:layout_column="7"
            android:layout_margin="4dp"
            android:background="@color/black" />

    </GridLayout>

    <!-- Gate -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/iconportao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="90"
            android:src="@drawable/baseline_compare_arrows_24" />

        <ImageView
            android:id="@+id/portao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="90"
            android:src="@drawable/entradaportao" />

    </FrameLayout>

    <!-- TextView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rampa de Acesso"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/att"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            style="@style/Button"
            android:text="Atualizar"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/legenda" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Livre"
            android:textSize="18sp" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/legendaocupada" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocupado"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
